generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER")   // вместо enum Role
  reports   Report[]
  comments  Comment[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  reports   Report[]
  createdAt DateTime @default(now())
}

model Report {
  id          String   @id @default(uuid())
  title       String
  description String
  status      String   @default("NEW")   // вместо enum ReportStatus
  lat         Float?
  lng         Float?
  address     String?
  photoUrl    String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  authorId    String
  author      User     @relation(fields: [authorId], references: [id])
  comments    Comment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  reportId  String
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}